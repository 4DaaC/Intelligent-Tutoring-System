include question
  .control-group
    .control-label Answers
      br
      button.btn#addno(type="button") Add Answer
    #choices.controls 
      if add
        .input-append
          input.span8(type='text', name="correct")
          button.btn.btn-danger(type="button", class="del")
            i.icon-remove-sign
      else
        each choice in JSON.parse(quest.correct_answer)
          .input-append
            input.span8(type="text",name="correct", value="#{choice}")
            button.btn.btn-danger(type="button", class="del")
              i.icon-remove-sign
