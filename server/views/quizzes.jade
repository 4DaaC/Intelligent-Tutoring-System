-if(quizzes.length == 0)
  h1 No Quizzes Found
-else
  h1= quizzes[0].className + "'s Quizzes"
  table.center
    tr
      th
        |Name
      th
        |Class
      th Question Amount  
      th 
      th
    for quiz in quizzes
      tr
        td
          a(href="/viewQuiz?qid=#{quiz.qid}")=quiz.name
        td=quiz.className
        td=quiz['question_amount']
        td
          a(href="quizGrades?qid=#{quiz.qid}") Grades
        td
          a(href="/editQuiz?qid=#{quiz.qid}") Edit
          span |
          a(href="/remQuiz?qid=#{quiz.qid}", onClick="return confirm('Are you sure you want to delete this Quiz?');") Delete
a(href="/addQuiz?cid=#{cid}") Add a Quiz
br
-if(modules.length == 0)
  h1 No Modules Found
-else
  h1 = modules[0].className + "'s Modules"
  table.center
    tr
      th
        |Name
      th
        |Class
      th
    for module in modules
      tr
        td
          a(href="/viewModule?mid=#{module.mid}")=module.title
        td=module.title
        td
          a(href="/remModule?qid=#{module.mid}", onClick="return confirm('Are you sure you want to delete this Module?');") Delete
a(href="/addModule?cid=#{cid}") Add a Module
-if(students.length == 0)
  h1 No Students in Class
-else
  h1 Students in Class
  table.center
    tr
      th
        |Name
    for student in students
      tr
        td
          =student.username
        td
          a(href="/remStud?cid=#{cid}&uid=#{student.uid}", onClick="return confirm('Are you sure you want to remove this student from the class');") Remove
