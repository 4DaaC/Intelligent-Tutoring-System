h1 Edit Class
form(method="post")
 table
  tr
    td Class name:
      input(type="text", name="cname",value="#{theClass.name}")
  tr
   td Teacher:
    if (isAdmin)
      if (typeof(theClass) == 'undefined')
        select(id="teacher", name="tuser")
      else
        select(id="teacher",name="tuser",userid="#{theClass.uid}")
    else
      =userName
      input(type="hidden", name="tuser",value="#{userid}")
  tr
   td Limit:
    input(type="text", name="limit", value="#{theClass.classlimit}")
  tr
   td Visibility
    select(name="priv")
     if(theClass.privacy == 0)
      option(value="0") public
      option(value="1") private
     else
      option(value="1") private
      option(value="0") public
  tr
   td
    input(type="hidden", name="cid", value="#{theClass.cid}")
    input(type="submit", value="Save Changes")
