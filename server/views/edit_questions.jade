h1 Edit #{title}
if quiz.active
  a(href="/disableQuiz?qid=#{qid}") Disable Quiz
else
  a(href="/enableQuiz?qid=#{qid}") Enable Quiz
br
span Questions required to enable: #{quiz['question_amount']}
table(id="quest-count")
  tr
    th(colspan=2) Question Count
  tr
    td Easy
    if diffArray[1] >= quiz['question_amount']
      td.pass #{diffArray[1]}
    else
      td.fail #{diffArray[1]}
  tr
    td Medium
    if diffArray[2] >= quiz['question_amount']
      td.pass #{diffArray[2]}
    else
      td.fail #{diffArray[2]}
  tr
    td Difficult
    if diffArray[3] >= quiz['question_amount']
      td.pass #{diffArray[3]}
    else
      td.fail #{diffArray[3]}
select(id="type")
  option(value="multi") Multiple Choice
  option(value="tf") True/False
  option(value="short") Short Answer
button(onclick="window.location='/addQuestion?qid=#{qid}&type='+$('#type').val()") Add
form(method="post", action="/question")
  table(id="qtable")
    tr
      th Type
      th Difficulty
      th Category
      th Question
      th Possible Answers
      th Correct Answer
      th
    each question in questions
      tr
        if question.type == 'multi'
          td Multiple Choice
        if question.type == 'tf'
          td True/False
        if question.type == 'short'
          td Short Answer
        td
          if question.difficulty == 1
            |Easy
          if question.difficulty == 2
            |Medium
          if question.difficulty == 3
            |Difficult
        td #{question.category}
        td
          a(href="/editQuestion?qid=#{qid}&questid=#{question.questid}") #{question.question}
        if question.type == 'multi'
          td
            table
              each choice in JSON.parse(question.answers)
                tr
                  td #{choice} 
          td
            table
              each answer in JSON.parse(question.correct_answer)
                tr
                  td #{answer}
        if question.type == 'tf'
          td
          td #{JSON.parse(question.correct_answer)}
        if question.type == 'short'
          td
          td
            table
              each answer in JSON.parse(question.correct_answer)
                tr
                  td #{answer}
        td
          button.rem(type="button", value="#{question.questid}")
            |Del
  input(type="hidden", value="add", name="action")
  input(type="hidden", value="#{qid}", name="qid")
